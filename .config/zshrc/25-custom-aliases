alias ls='eza -a --icons'
alias ll='eza -al --icons'

#custom-aliases
alias timesync="sudo timedatectl set-ntp true"

# copy to clipboard
alias toclip="wl-copy"

#file operations
alias rm='rm -I'
alias mv='mv -i'
alias cp='cp -i'
alias df='df -h'
alias size='du -hs'
alias tree='find . -print | sed -e '\''s;[^/]*/;|____;g;s;____|; |;g'\'''

# music
alias mp3dl_deprecated='youtube-dl -x --audio-format mp3 --metadata-from-title "%(artist)s - %(title)s" -o "%(title)s.%(ext)s"'
alias mp3dl_single='yt-dlp -x --audio-format mp3 -o "%(title)s.%(ext)s"'
alias mp3dl_playlist="$HOME/dotfiles/.config/myscripts/mp3dl_playlist.sh"
alias tumdownload="$HOME/dotfiles/.config/myscripts/tumdownload.sh"

#reload zsh conf
alias reload='source ~/.zshrc'

#spwan ssh agent
alias ssha='eval "$(ssh-agent -s)"'

#other
alias timel='timedatectl set-ntp 1'
alias audio='pavucontrol'
alias paccache_clean='paccache -r'